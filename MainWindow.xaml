<Window x:Class="FmpAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FmpAnalyzer"
        mc:Ignorable="d"
        Title="FMP Analyzer" Height="800" Width="1400">
    <Window.Resources>
        <local:MainWindowViewModel x:Key="ViewModel" />
    </Window.Resources>
    <Window.DataContext>
        <StaticResource ResourceKey="ViewModel" />
    </Window.DataContext>
    <Grid>
        <TabControl>
            <TabItem Header="Compounder">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10"></RowDefinition>
                        <RowDefinition Height="30"></RowDefinition>
                        <RowDefinition Height="10"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="10"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10"></ColumnDefinition>
                        <ColumnDefinition Width="200"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="10"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"  
                           Content="{Binding ConnectionString}"></Label>

                    <Grid Grid.Row="3" Grid.Column="1"
                          Grid.RowSpan="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"></RowDefinition>
                           <RowDefinition Height="30"></RowDefinition>
                            <RowDefinition Height="30"></RowDefinition>
                            <RowDefinition Height="30"></RowDefinition>
                            <RowDefinition Height="30"></RowDefinition>
                            <RowDefinition Height="30"></RowDefinition>
                            <RowDefinition Height="30"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="10"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="45"></ColumnDefinition>
                            <ColumnDefinition Width="50"></ColumnDefinition>
                            <ColumnDefinition Width="50"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0"
                           Content="ROE >"></Label>
                        <TextBox x:Name="txtRoeFilter" Margin="0,2,0,5"
                             Text="{Binding RoeFilter}"
                                 Grid.Column="1"></TextBox>
                        <CheckBox Content="Stable ROE Growth" 
                                  x:Name="chkStableRoeGrowth"
                                  IsChecked="{Binding StableRoeGrowth}"
                                  Grid.Row="1"
                                  Grid.ColumnSpan="3"
                                  FlowDirection="RightToLeft"
                                  HorizontalAlignment="Left"
                                  Margin="4,0,0,0"
                                  VerticalAlignment="Bottom"></CheckBox>
                        <Label Grid.Column="0" Grid.Row="2"
                               Grid.ColumnSpan="2"
                           Content="History Depth:"></Label>
                        <TextBox x:Name="txtHistoryDepthRoe" Margin="0,2,0,5"
                             Text="{Binding HistoryDepthRoe}"
                                 Grid.Column="2"
                                 Grid.Row="2"
                                 IsEnabled="{Binding 
                            ElementName=chkStableRoeGrowth, 
                            Path=IsChecked}"></TextBox>
                        <Label Grid.Column="0" Grid.Row="3"
                               Grid.ColumnSpan="2"
                           Content="Growth Grad:"></Label>
                        <TextBox x:Name="txtGrowthGradRow" Margin="0,2,0,5"
                             Text="{Binding GrowthGradRoe}"
                                 Grid.Column="2"
                                 Grid.Row="3"
                                 IsEnabled="{Binding 
                            ElementName=chkStableRoeGrowth, 
                            Path=IsChecked}"></TextBox>
                        <CheckBox Content="Stable Reinvestment Growth" 
                                  x:Name="chkStableReinvestmentGrowth"
                                  IsChecked="{Binding StableReinvestmentGrowth}"
                                  Grid.Row="4"
                                  Grid.ColumnSpan="4"
                                  FlowDirection="RightToLeft"
                                  HorizontalAlignment="Left"
                                  Margin="4,0,0,0"
                                  VerticalAlignment="Bottom"></CheckBox>
                        <Label Grid.Column="0" Grid.Row="5"
                               Grid.ColumnSpan="2"
                           Content="History Depth:"></Label>
                        <TextBox x:Name="txtHistoryDepthRReinvestment" 
                                 Margin="0,2,0,5"
                             Text="{Binding HistoryDepthReinvestment}"
                                 Grid.Column="2"
                                 Grid.Row="5"
                                 IsEnabled="{Binding 
                            ElementName=chkStableReinvestmentGrowth, 
                            Path=IsChecked}"></TextBox>
                        <Label Grid.Column="0" Grid.Row="6"
                               Grid.ColumnSpan="2"
                           Content="Growth Grad:"></Label>
                        <TextBox x:Name="txtGrowthGradReinvestment" 
                                 Margin="0,2,0,5"
                             Text="{Binding GrowthGradReinvestment}"
                                 Grid.Column="2"
                                 Grid.Row="6"
                                 IsEnabled="{Binding 
                            ElementName=chkStableReinvestmentGrowth, 
                            Path=IsChecked}"></TextBox>
                    </Grid>

                    <Grid Grid.Row="3" Grid.Column="2"
                          Grid.RowSpan="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"></RowDefinition>
                            <RowDefinition Height="10"></RowDefinition>
                            <RowDefinition Height="30"></RowDefinition>
                            <RowDefinition Height="10"></RowDefinition>
                            <RowDefinition Height="10"></RowDefinition>
                            <RowDefinition Height="10"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="10"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Button  
                            Cursor="Hand"
                            Command="{Binding CommandGo}">Go</Button>
                        <Label Content="{Binding CurrentAction}"
                               Grid.Row="2"></Label>
                        <ProgressBar x:Name="prgTotal"
                                Maximum="{Binding ProgressMax}" 
                                 Minimum="0" 
                                 Value="{Binding ProgressCurrent}"
                                 Grid.Row="4"/>
                        <TextBox Grid.Row="6" 
                             x:Name="txtResults"
                             Text="{Binding Results}">

                        </TextBox>
                    </Grid>

                </Grid>
            </TabItem>
            <TabItem Header="..."></TabItem>
        </TabControl>
    </Grid>
</Window>
